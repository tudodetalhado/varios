QToolTip
{
     border: 1px solid black;
     background-color: #739898;
     color: #ffffff;
     border-radius: 3px;
     opacity: 100;
}

QWidget
{
    color: #ffffff;
    background-color: #464646;
}

QWidget:item:hover
{
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #009a9c,
    stop: 1 #018b8d);
}

QWidget:item:selected
{
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #009a9c,
    stop: 1 #018b8d);
}

QMenuBar
{
    background: qlineargradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:0 #646464,
    stop:0.8 #646464,
    stop:0.9 #464646,
    stop:1 #000000);
}

QMenuBar::item
{
    background: transparent;
}

QMenuBar::item:selected
{
    background: transparent;
    border: 1px solid #009a9c;
    border-radius: 5px;

}

QMenuBar::item:pressed
{
    background: #464646;
    border: 1px solid #000;
    background-color: QLinearGradient(
        x1:0, y1:0,
        x2:0, y2:1,
        stop:1 #212121,
        stop:0.4 #343434/*,
        stop:0.2 #343434,
        stop:0.1 #009a9c*/
    );
    margin-bottom:-1px;
    padding-bottom:1px;
}

QMenu
{
    border: 1px solid #000;

}



QMenu::item
{
    background-color: #739898;
    padding: 2px 20px 2px 20px;
}

QMenu::item:selected
{
    color: #000000;
}

QWidget:disabled
{
    color: #464646;
    background-color: #bebebe;
}

QAbstractItemView
{
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #4a4a4a,
    stop: 0.1 #646464,
    stop: 1 #646464);
}

QWidget:focus
{
    border-style: solid;
    border-radius: 5px;
    border-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #009a9c,
    stop: 1 #018b8d);
}

QLineEdit
{
    background-color: QLinearGradient( x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #4a4a4a,
    stop: 0 #646464,
    stop: 1 #646464);
    padding: 1px;
    border-style: solid;
    border: 1px solid rgb(0, 154, 156);
    border-radius: 5;
}

QPushButton
{
    color: #b1b1b1;
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #565656,
    stop: 0.1 #575757,
    stop: 0.5 #4e4e4e,
    stop: 0.9 #4a4a4a,
    stop: 1 #464646);
    border-width: 1px;
    border-color: #739898;
    border-style: solid;
    border-radius: 6;
    padding: 3px;
    font-size: 12px;
    padding-left: 5px;
    padding-right: 5px;
}

QPushButton:pressed
{
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #575757,
    stop: 0.1 #4e4e4e,
    stop: 0.5 #4a4a4a ,
    stop: 0.9 #414141,
    stop: 1 #212121);
}

QComboBox
{
    selection-background-color: #009a9c;
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #565656,
    stop: 0.1 #575757,
    stop: 0.5 #4e4e4e,
    stop: 0.9 #4a4a4a,
    stop: 1 #464646);
    border-style: solid;
    border: 1px solid rgb(0, 154, 156);
    border-radius: 5;
}

QComboBox:hover,QPushButton:hover
{

    border-style: solid;
    border-radius: 5px;
    border-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #009a9c,
    stop: 1 #018b8d);
}


QComboBox:on
{
    padding-top: 3px;
    padding-left: 4px;
    background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #343434,
    stop: 0.1 #212121,
    stop: 0.5 #282828,
    stop: 0.9 #282828,
    stop: 1 #212121);
    selection-background-color: #009a9c;
}

QComboBox QAbstractItemView
{
    border: 2px solid darkgray;
    selection-background-color: QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #009a9c,
    stop: 1 #018b8d);
}

QComboBox::drop-down
{
     subcontrol-origin: padding;
     subcontrol-position: top right;
     width: 15px;

     border-left-width: 0px;
     border-left-color: darkgray;
     border-left-style: solid; /* just a single line */
     border-top-right-radius: 3px; /* same radius as the QComboBox */
     border-bottom-right-radius: 3px;
 }

QComboBox::down-arrow
{
     image: url(:/down_arrow.png);
}

QGroupBox:focus
{
border: 2px solid QLinearGradient(
x1: 0, y1: 0,
x2: 0, y2: 1,
stop: 0 #009a9c,
stop: 1 #018b8d);
}

QTextEdit:focus
{
    border: 2px solid QLinearGradient(
    x1: 0, y1: 0,
    x2: 0, y2: 1,
    stop: 0 #009a9c,
    stop: 1 #018b8d);
}

QScrollBar:horizontal {
     border: 1px solid #222222;
     background: QLinearGradient(
     x1: 0, y1: 0,
     x2: 0, y2: 1,
     stop: 0.0 #212121,
     stop: 0.2 #282828,
     stop: 1 #464646);
     height: 7px;
     margin: 0px 16px 0 16px;
}

QScrollBar::handle:horizontal
{
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 1, y2: 0,
      stop: 0 #009a9c,
      stop: 0.5 #018b8d,
      stop: 1 #009a9c);
      min-height: 20px;
      border-radius: 2px;
}

QScrollBar::add-line:horizontal {
      border: 1px solid #212121;
      border-radius: 2px;
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 1, y2: 0,
      stop: 0 #009a9c,
      stop: 1 #018b8d);
      width: 14px;
      subcontrol-position: right;
      subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
      border: 1px solid #000000;
      border-radius: 2px;
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 1, y2: 0,
      stop: 0 #009a9c,
      stop: 1 #018b8d);
      width: 14px;
     subcontrol-position: left;
     subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal, QScrollBar::left-arrow:horizontal
{
      border: 1px solid black;
      width: 1px;
      height: 1px;
      background: white;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal
{
      background: none;
}

QScrollBar:vertical
{
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 1, y2: 0,
      stop: 0.0 #212121,
      stop: 0.2 #282828,
      stop: 1 #464646);
      width: 7px;
      margin: 16px 0 16px 0;
      border: 1px solid #222222;
}

QScrollBar::handle:vertical
{
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 0, y2: 1,
      stop: 0 #009a9c,
      stop: 0.5 #018b8d,
      stop: 1 #009a9c);
      min-height: 20px;
      border-radius: 2px;
}

QScrollBar::add-line:vertical
{
      border: 1px solid #212121;
      border-radius: 2px;
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 0, y2: 1,
      stop: 0 #009a9c,
      stop: 1 #018b8d);
      height: 14px;
      subcontrol-position: bottom;
      subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical
{
      border: 1px solid #212121;
      border-radius: 2px;
      background: QLinearGradient(
      x1: 0, y1: 0,
      x2: 0, y2: 1,
      stop: 0 #018b8d,
      stop: 1 #009a9c);
      height: 14px;
      subcontrol-position: top;
      subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical
{
      border: 1px solid black;
      width: 1px;
      height: 1px;
      background: white;
}


QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical
{
      background: none;
}

QTextEdit
{
    background-color: #212121;
}

QPlainTextEdit
{
    background-color: #212121;
}

QHeaderView::section
{
    background-color: QLinearGradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:0 #646464,
    stop: 0.5 #505050,
    stop: 0.6 #434343,
    stop:1 #646464);
    color: white;
    padding-left: 4px;
    border: 1px solid #6c6c6c;
}

QCheckBox:disabled
{
color: #414141;
}

QDockWidget::title
{
    text-align: center;
    spacing: 3px; /* spacing between items in the tool bar */
    background-color: QLinearGradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:0 #bebebe,
    stop: 0.5 #212121,
    stop:1 #bebebe);
}

QDockWidget::close-button, QDockWidget::float-button
{
    text-align: center;
    spacing: 1px; /* spacing between items in the tool bar */
    background-color: QLinearGradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:0 #bebebe,
    stop: 0.5 #212121,
    stop:1 #bebebe);
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover
{
    background: #212121;
}

QDockWidget::close-button:pressed, QDockWidget::float-button:pressed
{
    padding: 1px -1px -1px 1px;
}

QMainWindow::separator
{
    background-color: QLinearGradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:0 #212121,
    stop: 0.5 #212121,
    stop: 0.6 #282828,
    stop:1 #343434);
    color: white;
    padding-left: 4px;
    border: 1px solid #4c4c4c;
    spacing: 3px; /* spacing between items in the tool bar */
}

QMainWindow::separator:hover
{

    background-color: QLinearGradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:0 #018b8d,
    stop:0.5 #739898,
    stop:1 #009a9c);
    color: white;
    padding-left: 4px;
    border: 1px solid #6c6c6c;
    spacing: 3px; /* spacing between items in the tool bar */
}

QToolBar::handle
{
     spacing: 3px; /* spacing between items in the tool bar */
     background: url(:/img/handle.png);
}

QMenu::separator
{
    height: 1px;
    background-color: #ffffff;
    border: 1px;
    border-style: solid;
    border-color: #739898;
}

QProgressBar
{
    border: 2px solid grey;
    border-radius: 5px;
    text-align: center;
}

QProgressBar::chunk
{
    background-color: #018b8d;
    width: 2.15px;
    margin: 0.5px;
}

QTabBar::tab {
    color: #b1b1b1;
    border: 1px solid #464646;
    border-bottom-style: none;
    background-color: #646464;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 3px;
    padding-bottom: 2px;
    margin-right: -1px;
}

QTabWidget::pane {
    border: 1px solid #464646;
    top: 1px;
}

QTabBar::tab:last
{
    margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
    border-top-right-radius: 3px;
}

QTabBar::tab:first:!selected
{
 margin-left: 0px; /* the last selected tab has nothing to overlap with on the right */


    border-top-left-radius: 3px;
}

QTabBar::tab:!selected
{
    color: #b1b1b1;
    border-bottom-style: solid;
    margin-top: 3px;
    background-color: QLinearGradient
    (x1:0, y1:0,
    x2:0, y2:1,
    stop:1 #212121,
    stop:.4 #343434);
}

QTabBar::tab:selected
{
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    margin-bottom: 0px;
}

QTabBar::tab:!selected:hover
{
    /*border-top: 2px solid #009a9c;
    padding-bottom: 3px;*/
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    background-color: QLinearGradient(
    x1:0, y1:0,
    x2:0, y2:1,
    stop:1 #212121,
    stop:0.4 #343434,
    stop:0.2 #343434,
    stop:0.1 #009a9c);
}

QRadioButton::indicator:checked, QRadioButton::indicator:unchecked{
    color: #b1b1b1;
    background-color: #bebebe;
    border: 1px solid #b1b1b1;
    border-radius: 6px;
}

QRadioButton::indicator:checked
{
    background-color: qradialgradient(
        cx: 0.5, cy: 0.5,
        fx: 0.5, fy: 0.5,
        radius: 1.0,
        stop: 0.25 #009a9c,
        stop: 0.3 #bebebe
    );
}

QCheckBox::indicator
{
    color: #b1b1b1;
    background-color: #bebebe;
    border: 1px solid #b1b1b1;
    width: 9px;
    height: 9px;
}

QRadioButton::indicator
{
    border-radius: 6px;
}

QRadioButton::indicator:hover, QCheckBox::indicator:hover
{
    border: 1px solid #009a9c;
}

QCheckBox::indicator:checked
{
    image:url(:/img/checkbox.png);
    background-color: #b1b1b1;
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled
{
    border: 1px solid #464646;
}
